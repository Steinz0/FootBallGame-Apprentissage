    </div>

    <div class="fireworks-rights" id="fireworks-rights">
      <div class="firework" id="firework-right1">
        <div class="explosion"></div>
        <div class="explosion"></div>
        <div class="explosion"></div>
        <div class="explosion"></div>
        <div class="explosion"></div>
        <div class="explosion"></div>
